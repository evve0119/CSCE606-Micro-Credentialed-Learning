<% layout("layouts/boilerplate")%>
<h1 class="text-primary">View all credentials</h1>
<%for(let credential of currentUser.credentials){%>
    <h2> &#9750 <%- credential.name %> </h2>
<% } %> 

<div class="mt-5">
    <form action="/allCredentials/<%= currentUser._id %>" class="needs-validation" novalidate method="POST"> <!-- Use bootstrap to validate not HTML -->
        <div>
            <label class="form-label h3" for="credentialName">Add credential</label>
            <input class="form-control" type="text" name="credentialName" id="credentialName" placeholder="Credential name" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-success mt-3">Add credential</button>
    </form>
</div>

<div>
    <a class="btn btn-info mt-3"href="/myHomePage/<%= currentUser._id %>">Return to Home page</a>
</div>